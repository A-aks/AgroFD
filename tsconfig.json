{
  "compilerOptions": {
    "target": "ES6",                  
    "module": "CommonJS",              
    "moduleResolution": "Node",        
    "outDir": "./dist",                
    "rootDir": "./src",                
    "strict": true,                    
    "esModuleInterop": true,           
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
